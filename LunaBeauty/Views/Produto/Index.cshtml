@model IEnumerable<LunaBeauty.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Nossos produtos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar novo produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                    <a class="btn btn-outline-primary me-2" asp-action="Edit" asp-route-id="@item.ProdutoId">Editar</a> 
                    <a class="btn btn-outline-primary me-2" asp-action="Details" asp-route-id="@item.ProdutoId">Detalhes</a> 
                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.ProdutoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
