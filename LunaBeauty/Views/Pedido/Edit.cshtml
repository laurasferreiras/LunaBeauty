@model LunaBeauty.Models.Pedido

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar pedido</h1>

<h4>Pedidos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PedidoId" />
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendedorId" class="control-label"></label>
                <select asp-for="VendedorId" class="form-control" asp-items="ViewBag.VendedorId"></select>
                <span asp-validation-for="VendedorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <br />

            <h4>Itens do Pedido</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Itens.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Itens[i].ProdutoOrigem.Nome
                                <input type="hidden" name="Itens[@i].ItemPedidoId" value="@Model.Itens[i].ItemPedidoId" />
                                <input type="hidden" name="Itens[@i].ProdutoId" value="@Model.Itens[i].ProdutoId" />
                            </td>
                            <td>
                                <input type="number"
                                    class="form-control"
                                    name="Itens[@i].Quantidade"
                                    value="@Model.Itens[i].Quantidade" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <br />

            <div class="form-group">
                <input type="submit" value="Salvar alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-secondary" asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
