@model LunaBeauty.Models.Pedido

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do pedido</h1>

<div>
    <h4>Pedidos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClienteOrigem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClienteOrigem.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VendedorOrigem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VendedorOrigem.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
    </dl>
</div>

<h4>Itens do Pedido</h4>
<table class="table">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Valor Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Itens)
        {
            <tr>
                <td>@item.ProdutoOrigem.Nome</td>
                <td>@item.Quantidade</td>
                <td>@item.ValorTotal</td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@Model?.PedidoId">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Voltar à lista</a>
</div>
